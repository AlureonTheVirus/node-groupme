{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "typings",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
