{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - tsconfig.json"
		},
		{
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": [
				"rm -r dist;",
				"npm pack;",
				"mv -force ./groupme.js-0.0.1.tgz ../groupme.js-test;",
				"cd ../groupme.js-test/;",
				"npm i ./groupme.js-0.0.1.tgz;"
			],
			"label": "compile and send to test env",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}